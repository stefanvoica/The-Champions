@model List<OnlineCleaningShop.Models.NewsletterSubscriber>

<h2>Lista Abonați Newsletter</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Data abonării</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Email</td>
                <td>@Model[i].SubscribedAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
