<div id="chat-widget" style="position: fixed; bottom: 20px; right: 20px; width: 300px; z-index: 1000;">
    <div class="bg-light p-3 rounded shadow">
        <form id="chat-form">
            <input type="text" id="chat-message" name="message" class="form-control mb-2" placeholder="Scrie o întrebare..." required />
            <button type="submit" class="btn btn-sm btn-primary w-100">Trimite</button>
        </form>

        <div id="chat-response" class="mt-2 alert alert-success d-none" style="font-size: 0.9em;"></div>

        <a href="/Chat/Index" class="btn btn-link btn-sm mt-2 w-100 text-center">Vezi conversația completă</a>
    </div>
</div>

