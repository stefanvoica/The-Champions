@model OnlineCleaningShop.Models.Review
<partial name="_Notifications" />


<h2>Editare review</h2>
<br />

<form method="post" action="/Reviews/Edit/@Model.Id">
    <div class="form-group">
        <label for="Text">Textul review-ului</label>
        <br />
        <textarea name="Text" id="Text" class="form-control">@Model.Text</textarea>
    </div>

    <div class="form-group mt-3">
        <label for="Rating">Alege rating</label>
        <br />
        <select name="Rating" id="Rating" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                if (Model.Rating == i)
                {
                            <option value="@i" selected>@i - @(i == 1 ? "Foarte slab" : i == 2 ? "Slab" : i == 3 ? "Mediu" : i == 4 ? "Bun" : "Excelent")</option>
                }
                else
                {
                            <option value="@i">@i - @(i == 1 ? "Foarte slab" : i == 2 ? "Slab" : i == 3 ? "Mediu" : i == 4 ? "Bun" : "Excelent")</option>
                }
            }
        </select>
    </div>

    <br />
    <button class="btn btn-primary" type="submit">Editează review-ul</button>
</form>
